<%# faire un collapse donate avec icon et mettre les deux options 1 et 2 € %>

<%= link_to "#collapseAmount#{message.id}", 
      class: "btn w-100 bg-warning text-light fw-bold mx-1", "data-bs-toggle": "collapse", 
      role: "button", "aria-expanded": "false", "aria-controls": "collapseAmount#{message.id}" do %>
      <i class="fa fa-regular fa-heart mx-1"></i>
      <span class="fw-bold">Faire un don</span>
<% end %>

<div class="collapse" id="collapseAmount<%= message.id %>">
<br>

      <div class="container-fluid text-center">
            <%= form_with url: :create_checkout_session do |f| %>
                        <%= link_to "Soutenir FuturMessage: 1€", create_checkout_session_path(produit_id: Produit.find(1)), 
                              method: :post, class: "btn btn-outline-warning fw-bold", "data-turbo" => "false" %>
                        <%= link_to "Soutenir FuturMessage: 3€", create_checkout_session_path(produit_id: Produit.find(2)), 
                              method: :post, class: "btn btn-outline-warning fw-bold", "data-turbo" => "false" %>
            <% end %>
      </div>

</div>
